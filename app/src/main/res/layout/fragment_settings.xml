<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="focus.focus.settingscreen.view.SettingsFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:orientation="horizontal"
        android:id="@+id/settingLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Task time"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv1"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="18sp" />

        <TextView
            android:layout_width="71dp"
            android:layout_height="33dp"
            android:id="@+id/tvResult1"
            android:textSize="18sp"
            android:layout_row="2"
            android:layout_column="2" />


        <TextView
            android:text="Settings"
            android:layout_width="174dp"
            android:layout_height="50dp"
            android:id="@+id/tvTitle"
            android:textSize="30sp"
            android:layout_row="0"
            android:layout_column="1" />

        <SeekBar

            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="-3dp"
            android:id="@+id/sb1"
            android:layout_row="2"
            android:layout_columnSpan="2"
            android:max="59"
            android:layout_column="0"
            android:progress="1" />




        <TextView
            android:text="Short break"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv2"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="18sp"
            android:layout_marginTop="20dp"/>

        <SeekBar

            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="-3dp"
            android:id="@+id/sb2"
            android:layout_row="4"
            android:layout_columnSpan="2"
            android:max="59"
            android:layout_column="0"
            android:progress="1" />

        <TextView
            android:layout_width="71dp"
            android:layout_height="33dp"
            android:id="@+id/tvResult2"
            android:textSize="18sp"
            android:layout_row="4"
            android:layout_column="2" />





        <TextView
            android:text="Long break"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv3"
            android:layout_row="5"
            android:layout_column="0"
            android:textSize="18sp"
            android:layout_marginTop="20dp"/>

        <SeekBar

            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="-3dp"
            android:id="@+id/sb3"
            android:layout_row="6"
            android:layout_columnSpan="2"
            android:max="59"
            android:layout_column="0"
            android:progress="1" />

        <TextView
            android:layout_width="71dp"
            android:layout_height="33dp"
            android:id="@+id/tvResult3"
            android:textSize="18sp"
            android:layout_row="6"
            android:layout_column="2" />





        <TextView
            android:text="Break count"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv4"
            android:layout_row="7"
            android:layout_column="0"
            android:textSize="18sp"
            android:layout_marginTop="20dp"/>

        <SeekBar

            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="-3dp"
            android:id="@+id/sb4"
            android:layout_row="8"
            android:layout_columnSpan="2"
            android:max="9"
            android:layout_column="0"
            android:progress="1" />

        <TextView
            android:layout_width="71dp"
            android:layout_height="33dp"
            android:id="@+id/tvResult4"
            android:textSize="18sp"
            android:layout_row="8"
            android:layout_column="2" />
    </GridLayout>

</FrameLayout>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="focus.focus.mainscreen.view.MainFragment"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="1"
    android:orientation="horizontal"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">


    <FrameLayout
        android:layout_column="0"
        android:layout_row="0"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="310dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countTv"
            android:textSize="26sp" />

    </FrameLayout>

    <ProgressBar
        android:id="@+id/timerProgressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:max="0"
        android:progress="0"
        android:layout_width="333dp"
        android:layout_height="333dp"
        android:indeterminate="false"
        android:layout_above="@+id/bottom_header_relativelayout"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowSpan="2"
        android:progressDrawable="@drawable/custom_progress_bar"
        android:background="@drawable/custom_progress_bar_background"
        />

    <GridLayout
        android:layout_width="333dp"
        android:layout_height="333dp"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:columnCount="3"
        >

        <TextView
            android:layout_width="60dp"
            android:id="@+id/minutesTimer"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="120dp"
            android:textSize="50sp" />

        <TextView
            android:layout_width="60dp"
            android:id="@+id/secoundsTimer"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="120dp"
            android:textSize="50sp" />
    </GridLayout>

    <Button
        android:id="@+id/pauseBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/pause_button" />

    <Button
        android:id="@+id/startBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="150dp"
        android:background="@drawable/play_button"/>
</GridLayout>
